pipeline {
    agent {
        kubernetes {
            defaultContainer 'jnlp'
            yamlFile 'ansible/jenkins-pod.yaml'
        }
    }
    stages {
        stage('Playbook') {
            environment {
                ANSIBLE_USER = credentials('ansible_user')
                ANSIBLE_USER_PUBLIC_SSH_KEY = credentials('ansible_user_public_ssh_key')
                ANSIBLE_HOST_KEY_CHECKING = 'False'
            }
            steps {
                container('ansible') {
                    ansiblePlaybook(
                        playbook: 'ansible/initial_setup/site.yml',
                        inventory: 'ansible/initial_setup/inventory.ini',
                        credentialsId: 'initial_setup_private_key',
                        become: true,
                        extraVars: [
                            ansible_user_password: env.ANSIBLE_USER_PSW,
                            ansible_user_public_ssh_key: env.ANSIBLE_USER_PUBLIC_SSH_KEY
                        ]
                    )
                }
            }
        }
    }
}
